const mix = require('laravel-mix');

mix.js('resources/js/app.js', 'public/js')
   .js('resources/js/modal-navigation.js', 'public/js');

mix.sass('resources/scss/main.scss', 'public/css')
   .options({
        processCssUrls: false
   });

if (mix.inProduction()) {
    mix.version();
} else {
    mix.sourceMaps();
}
